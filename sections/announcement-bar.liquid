{% style %}
  .simple-announcement-bar {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color | default: '#000000' }};
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    position: relative;
    z-index: 10;

    font-size: 16px;
    padding: 0;
    line-height: 7.5px;
  }

  .announcement-text {
    white-space: nowrap;
    overflow: hidden;
    /* Ensures the sliding text is cut off at the container's edge */
    width: 100%;
  }

  @keyframes slide-in {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-100%);
      /* Move it completely out of view to the left */
    }
  }

  .animation-for-announcment {
    display: inline-block;
    padding-left: 100%;
    animation: slide-in 16s linear infinite;
  }

{% endstyle %}


<div class="simple-announcement-bar">
  <div class="announcement-text {{section.settings.text_align}}">
    <div class="animation-for-announcment">
      {{ section.settings.text }}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Announcement",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000"
      }
    ]
  }
{% endschema %}